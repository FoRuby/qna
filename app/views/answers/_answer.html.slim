div id=answer.id
  hr
  div class='row'
    div class='col-6'
      .answer-body
        p = answer.body

      = render template: 'answers/edit',
               locals: { answer: answer }

  - if current_user&.author?(answer)
    div class='row'
      div class='col-6'
        = link_to 'Edit answer',
                   '#',
                   class: 'edit-answer-link',
                   data: { answer_id: answer.id }
        = ' | '
        = link_to 'Delete answer',
                   answer_path(answer),
                   method: :delete,
                   remote: true,
                   data: { confirm: "Are you sure?" }



$('.new-answer-errors').html('<%= render 'shared/errors', resource: @answer %>');
<% if @answer.persisted? %>
  $('.answers').append('<%= j render @answer %>');
  $('.new-answer').html('<%= j render template: 'answers/new' %>');
  $('.new-answer textarea').val('')
  $('.flash-messages').html('<%= j render 'shared/messages' %>');
<% end %>

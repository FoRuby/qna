<% if @attachment.destroyed? %>
  $('<%= record_css_id_of_attachment(@attachment) %> .attachments')
    .html('<%= j render 'attachments/attachment', resource: @attachment.record %>');

  $('<%= record_css_id_of_attachment(@attachment) %> .attachments-delete')
    .html('<%= j render 'attachments/delete', resource: @attachment.record %>');

  $('.flash-messages').html('<%= j render 'shared/messages' %>');
<% end %>
